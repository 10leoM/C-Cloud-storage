{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug http_upload",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/application/bin/http_upload",
      "args": [],
  "stopAtEntry": false,
      "cwd": "${workspaceFolder}/application/bin",
      "environment": [
        { "name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/lib:${env:LD_LIBRARY_PATH}" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Allow pending breakpoints until shared libs are loaded",
          "text": "set breakpoint pending on",
          "ignoreFailures": true
        }
      ],
  "preLaunchTask": "Build (Debug)"
    },
    {
      "name": "Attach to process (gdb)",
      "type": "cppdbg",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
